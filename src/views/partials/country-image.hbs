<div class="card has-background-link-light">
  <div class="card-image">
    <figure class="image is-256x256">
      <img src={{country.img}}>
    </figure>
  </div>
  <div class="card-content">
    <form action="/country/{{country._id}}/uploadimage" method="POST" enctype="multipart/form-data">
      <div id="file-select" class="file has-name is-fullwidth">
        <label class="file-label"> <input class="file-input" name="imagefile" type="file" name="resume" accept="image/png, image/jpeg">
          <span class="file-cta">
            <span class="file-icon">
              <i class="fas fa-upload"></i>
            </span>
            <span class="file-label">
              Choose a fileâ€¦
            </span>
           </span>
          <span class="file-name"></span>
        </label>
        <button type="submit" class="button is-link">Upload</button>
      </div>
    </form>

    {{#if country.img}}
    <form action="/country/{{country._id}}/deleteimage" method="GET">
      <button type="submit" class="button is-danger mt-3">Delete Image</button>
    </form>
    {{/if}}
  </div>
</div>

<script>
  const fileInput = document.querySelector(".file-input");
  fileInput.onchange = () => {
    if (fileInput.files.length > 0) {
      const fileName = document.querySelector(".file-name");
      fileName.textContent = fileInput.files[0].name;
    }
  };
</script>